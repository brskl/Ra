<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.benjaminsklar.ra">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewGameActivity" />
        <activity
            android:name=".GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TilesActivity"
            android:label="@string/TitleActivityTiles"
            android:parentActivityName=".GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ScoreActivity"
            android:label="@string/TitleActivityScore"
            android:parentActivityName=".GameActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>